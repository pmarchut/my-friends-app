@model FriendIndexViewModel
@{
    ViewBag.Title = "Friends";
}

<br />
<h1>Friends</h1>

<div>
    <a asp-controller="Friends" asp-action="Create" class="btn btn-primary m-1">Create</a>
</div>

<form asp-controller="Friends" asp-action="Index" method="get" class="mt-3 bg-light">
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="FirstName" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="FirstName" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="LastName" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="LastName" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="Pseudonym" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="Pseudonym" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="Telephone" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="Telephone" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="Email" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="Email" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="Address" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="Address" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="City" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="City" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="PostalCode" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="PostalCode" class="m-1" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-info m-1">Filter</button>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th><a class="sort-link" asp-route-sortBy="FirstName">First Name</a></th>
                    <th><a class="sort-link" asp-route-sortBy="LastName">Last Name</a></th>
                    <th><i class="fa fa-pencil-square-o" aria-hidden="true"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Friend friend in Model.Friends)
                {
                    <tr>
                        <td>
                            @friend.FirstName
                        </td>
                        <td>
                            @friend.LastName
                        </td>
                        <td class="text-center">
                            <a asp-controller="Friends" asp-action="Details" asp-route-id="@friend.Id" class="btn btn-info m-1">Details</a>
                            <a asp-controller="Friends" asp-action="Edit" asp-route-id="@friend.Id" class="btn btn-primary m-1">Edit</a>
                            <a asp-controller="Friends" asp-action="Delete" asp-route-id="@friend.Id" class="btn btn-danger m-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Friend Paging">
            <ul class="pagination">
                <li class="page-item m-1">
                    <a class="page-link" href="/Friends/Index/@((Model.CurrentPage == 1) ? 1 : (Model.CurrentPage - 1))/@Model.SortBy" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item m-1">
                        <a class="page-link" href="/Friends/Index/@i/@Model.SortBy">@i</a>
                    </li>
                }
                <li class="page-item m-1">
                    <a class="page-link" href="/Friends/Index/@((Model.CurrentPage == Model.TotalPages) ? Model.TotalPages : (Model.CurrentPage + 1))/@Model.SortBy" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
